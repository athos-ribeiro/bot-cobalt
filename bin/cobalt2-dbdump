#!perl

use 5.12.1;
use strict;
use warnings;
use Carp;

use Cobalt::DB;

my($dbpath, $outpath);

use Getopt::Long;
GetOptions(
  help => sub {
    say "Usage: $0 --database=PATH --output=PATH"; 
    exit 0
  },
  
  'database=s' => \$dbpath,
  'input=s'    => \$dbpath,
  
  'output=s'   => \$outpath,
);

unless ($dbpath) {
  print "Path to database to be exported: \n > ";
  $dbpath = <STDIN>;
  chomp($dbpath);
}

croak "could not locate dbpath: $dbpath"
  unless -f $dbpath;

unless ($outpath) {
  print "Output path: \n > ";
  $outpath = <STDIN>;
  chomp($outpath);
}

if (-f $outpath) {
  print "Output path exists...\n";
  print "Press ENTER to continue, Ctrl+C to exit. ";
  <STDIN>;
  print "\n";
}

my $db = Cobalt::DB->new(
  File => $dbpath,
  LockFile => ".dbdump.lock",
);

$db->dbopen or croak "dbopen failure";
my $yaml = $db->dbdump or croak "dbdump failure";
$db->dbclose;

say "Writing YAML to $outpath";

open my $outfh, '>', $outpath or croak "open failed: $!";
print $outfh $yaml;
close $outfh;

say "Done.";
